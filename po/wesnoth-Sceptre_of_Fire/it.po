msgid "Wolf"
msgstr "Lupo"

#: Sceptre_of_Fire/units/Wolf.cfg:26
msgid "bite"
msgstr "morso"

#: Sceptre_of_Fire/units/Wolf.cfg:44
msgid "claws"
msgstr "artigli"

#: Sceptre_of_Fire/units/Wolf.cfg:45
