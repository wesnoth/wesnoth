#: data/campaigns/Dead_Water/scenarios/03_Wolf_Coast.cfg:85
msgid "Gashnok"
msgstr "Гашнок"

#. [side]
#: data/campaigns/Dead_Water/scenarios/03_Wolf_Coast.cfg:143
msgid "Wild Wolves"
msgstr "Дикі вовки"

