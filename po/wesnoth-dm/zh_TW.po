#: data/campaigns/Delfadors_Memoirs/scenarios/13_The_Return_of_Trouble.cfg:78
msgid "Knafa-ord"
msgstr "納法奧德"

#. [leader]: id=Tan-drul, type=Orcish Warlord
#: data/campaigns/Delfadors_Memoirs/scenarios/13_The_Return_of_Trouble.cfg:113
msgid "Tan-drul"
msgstr "坦-德魯爾"

