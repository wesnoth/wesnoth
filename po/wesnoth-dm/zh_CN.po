msgid "Kalenz"
msgstr "卡雷兹"

#: data/campaigns/Delfadors_Memoirs/utils/characters.cfg:54
msgid "Chantal"
msgstr "香黛尔"

#: data/campaigns/Delfadors_Memoirs/utils/characters.cfg:92
msgid "Ulrek"
msgstr "乌尔雷克"

#: data/campaigns/Delfadors_Memoirs/utils/characters.cfg:102
