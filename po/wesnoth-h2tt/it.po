#. [event]
#: data/campaigns/Heir_To_The_Throne/scenarios/03_Blackwater_Port.cfg:450
msgid "Cicyn"
msgstr "Cicyn"

#. [event]
#: data/campaigns/Heir_To_The_Throne/scenarios/03_Blackwater_Port.cfg:451
msgid "Ginvan"
msgstr "Ginvan"

