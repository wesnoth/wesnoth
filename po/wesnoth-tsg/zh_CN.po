#: data/campaigns/The_South_Guard/scenarios/03_A_Desparate_Errand.cfg:382
msgid "Linderion"
msgstr "林德里翁"

#. [event]
#: data/campaigns/The_South_Guard/scenarios/03_A_Desparate_Errand.cfg:383
msgid "Mithalwe"
msgstr "米撒尔韦"

