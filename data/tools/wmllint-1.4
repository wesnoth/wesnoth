            for k in hexcount.keys():
                if hexcount[k] > maxc:
                    maxc = hexcount[k]
                    maxk = k
            #print("Dominated by %s" % maxk)
            inmap[y][x] = inmap[y][x].replace("_K", "K" + maxk)
