        for (old, new) in linechanges:
            transformed = transformed.replace(old, new)
        # Report the changes
        if verbose > 0 and transformed != line:
            msg = "%s, line %d: %s -> %s" % \
                  (filename, lineno, line.strip(), transformed.strip())
