def string_strip(value):
    "String-strip the value"
    if value.startswith('"'):
        value = value[1:]
        if value.endswith('"'):
            value = value[:-1]
    if value.startswith("'"):
        value = value[1:]
        if value.endswith("'"):
            value = value[:-1]
    return value

def parse_attribute(str_):
    "Parse a WML key-value pair from a line."
    if '=' not in str_:
        return None
    where = str_.find("=")
    leader = str_[:where]
    after = str_[where+1:]
    after = after.lstrip()
    if "#" in after:
        where = after.find("#")
        while after[where-1] in (" ", "\t"):
            where -= 1
        value = after[:where+1]
        comment = after[where:]
    else:
        value = after.rstrip()
        comment = ""
    # Return four fields: stripped key, part of line before value,
    # value, trailing whitespace and comment.
    return (leader.strip(), leader+"=", string_strip(value), comment)

