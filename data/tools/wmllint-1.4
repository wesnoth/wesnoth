                if os.path.exists(backup):
                    fromdate = time.ctime(os.stat(backup).st_mtime)
                    todate = time.ctime(os.stat(fn).st_mtime)
                    with codecs.open(backup, 'U', "utf8") as fromlines, \
                         codecs.open(fn, 'U', "utf8") as tolines:
